@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Rezervasyon Güncelleme Sayfası</div>
						</div>
						<input type="hidden" asp-for="BookingID" />
						<div class="card-body">
							<div class="form-group">
								<label for="name">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone" id="phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="mail">Mail Adresi</label>
								<input type="email" class="form-control" asp-for="Mail" id="mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="personcount">Kişi Sayısı</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="personcount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date">Rezervasyon Tarihi</label>
								<input type="date" class="form-control" asp-for="Date" id="Date">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Rezervasyonu Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


